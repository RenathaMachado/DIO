@model ProjetoMVC.Models.Contato

@{
    ViewData["Title"] = "Editar novo contato";
}

<h1>Editar novo contato</h1>

<hr/>

<div class="row">
    <div class="col-md-4">
        <form asp-action= "Editar">
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label><!--Nome da informação -->
                <input asp-for="Nome" class="form-control"/> <!--Entrada do dado -->
            </div>

            <div class="form-group">
                <label asp-for="Telefone" class="control-label"></label>
                <input asp-for="Telefone" class="form-control"/>
            </div>

            <div class="form-group">
                <label asp-for="Ativo" class="control-label"></label>
                <input types="checkbox" asp-for="Ativo" class="form-check-input"/>
            </div>
            <br>
            <div class="form-group">
                <input type="submit" value="Editar" class="btn-primary"/> <!-- input submit enviará os dados para o banco via POST -->
            </div>
        </form>
    </div>
</div>

<br>
<div>
    <a asp-action="Index">Voltar</a>
</div>